<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
    <script src="{{URL(:/js/settings.js)}}" />
  </head>

  <body>
    <listWithPreview id="SettingsPage_Library">
      <header>
        <simpleHeader>
          <title>{{TEXT(Settings)}}</title>
        </simpleHeader>
      </header>
      <preview>
        <keyedPreview>
          <title>&#x00AD;<!--soft-hyphen--></title>
          <summary/>
          <metadataKeys>
            <label>{{TEXT(Version)}}</label>
            <label>{{TEXT(Authors)}}</label>
            <label>{{TEXT(Wiki/Docs)}}</label>
            <label>{{TEXT(Homepage)}}</label>
            <label>{{TEXT(Forum)}}</label>
          </metadataKeys>
          <metadataValues>
            <label>{{EVAL(__VERSION__)}}</label>
            <label>Baa, roidy</label>
            <label>f00b4r, meltman</label>
            <label>https://github.com/ibaa/plexconnect</label>
            <label>http://forums.plexapp.com/...plexconnect</label>
          </metadataValues>
          <image>{{URL(:/templates/stoffez/images/PlexConnectLogo.jpg)}}</image>
        </keyedPreview>
      </preview>

      <menu>
        <sections>
		<menuSection>
           <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Library)}}</title>
              </horizontalDivider>
            </header>
            <items>
              <oneLineMenuItem id="LibraryView" onSelect="toggleSettings('LibraryView', 'Settings_Library')">
                <label>{{TEXT(Library View)}}</label>
                <rightLabel>{{SETTING(libraryview)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="stoffez_sectionicons" onSelect="toggleSettings('stoffez_sectionicons', 'Settings_Library')">
                <label>{{TEXT(Library Icons)}}</label>
                <rightLabel>{{SETTING(stoffez_sectionicons)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="stoffez_sectionsposition" onSelect="toggleSettings('stoffez_sectionsposition', 'Settings_Library')">
                <label>{{TEXT(Library Sections)}}</label>
                <rightLabel>{{SETTING(stoffez_sectionsposition)}}</rightLabel>
              </oneLineMenuItem>
              </items>
              </menuSection>
              <menuSection>
             <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Shared Library)}}</title>
              </horizontalDivider>
            </header>
            <items>
                <oneLineMenuItem id="stoffez_libraryview_remote" onSelect="toggleSettings('stoffez_libraryview_remote', 'Settings_Library')">
                <label>{{TEXT(Library View)}}</label>
                <rightLabel>{{SETTING(stoffez_libraryview_remote)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="stoffez_sectionicons_shared" onSelect="toggleSettings('stoffez_sectionicons_shared', 'Settings_Library')">
                <label>{{TEXT(Library Icons)}}</label>
                <rightLabel>{{SETTING(stoffez_sectionicons_shared)}}</rightLabel>
              </oneLineMenuItem> 
               </items>
              </menuSection>
        <!--Removed Below iOS 6.0-->
              <menuSection>
             <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Fanart and Header)}}</title>
              </horizontalDivider>
            </header>
            <items>
              <oneLineMenuItem id="stoffez_fanart" onSelect="toggleSettings('stoffez_fanart', 'Settings_Library')">
                <label>{{TEXT(Fanart)}}</label>
                <rightLabel>{{SETTING(stoffez_fanart)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="stoffez_libheader" onSelect="toggleSettings('stoffez_libheader', 'Settings_Library')">
                <label>{{TEXT(Library Header)}}</label>
                <rightLabel>{{SETTING(stoffez_libheader)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="stoffez_imageheader" onSelect="toggleSettings('stoffez_imageheader', 'Settings_Library')">
                <label>{{TEXT(Section Headers)}}</label>
                <rightLabel>{{SETTING(stoffez_imageheader)}}</rightLabel>
              </oneLineMenuItem>  
               </items>
              </menuSection>{{CUT(^aTVFirmwareVersion:CUT:=CUT|6.0=)}}
              <menuSection>
           <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Appearance)}}</title>
              </horizontalDivider>
            </header>
            <items>
              <oneLineMenuItem id="stoffez_library_search" onSelect="toggleSettings('stoffez_library_search', 'Settings_Library')">
                <label>{{TEXT(Search Section)}}</label>
                <rightLabel>{{SETTING(stoffez_library_search)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="stoffez_showtitles_library" onSelect="toggleSettings('stoffez_showtitles_library', 'Settings_Library')">
                <label>{{TEXT(Poster Titles)}}</label>
                <rightLabel>{{SETTING(stoffez_showtitles_library)}}</rightLabel>
              </oneLineMenuItem> 
              <oneLineMenuItem id="ChannelView" onSelect="toggleSettings('ChannelView', 'Settings_Library')">
                <label>{{TEXT(Channel View)}}</label>
                <rightLabel>{{SETTING(channelview)}}</rightLabel>
              </oneLineMenuItem>            
            </items>
          </menuSection>

          <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Library Extras)}}</title>
              </horizontalDivider>
            </header>
            <items>

              <oneLineMenuItem id="stoffez_library_ondeck" onSelect="toggleSettings('stoffez_library_ondeck', 'Settings_Library')">
                <label>{{TEXT(On Deck)}}</label>
                <accessories>
                  <checkMark/>
                </accessories>{{CUT($stoffez_library_ondeck::unchecked=CUT|checked=)}}
              </oneLineMenuItem>

              <oneLineMenuItem id="stoffez_library_channels" onSelect="toggleSettings('stoffez_library_channels', 'Settings_Library')">
                <label>{{TEXT(Recently Added)}}</label>
                <accessories>
                  <checkMark/>
                </accessories>{{CUT($stoffez_library_channels::unchecked=CUT|checked=)}}
              </oneLineMenuItem>               
              <oneLineMenuItem id="Library_Channels" onSelect="toggleSettings('Library_Channels', 'Settings_Library')">
                <label>{{TEXT(Channels)}}</label>
                <accessories>
                  <checkMark/>
                </accessories>{{CUT($library_channels::unchecked=CUT|checked=)}}
              </oneLineMenuItem>              
            </items>
          </menuSection>
        </sections>
      </menu>
    </listWithPreview>
  </body>
</atv>
