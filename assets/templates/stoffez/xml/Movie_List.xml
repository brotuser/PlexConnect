<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
  </head>

  <body>
    <listWithPreview id="Movie_List">
    {{CUT(size:CUT:0=CUT|1=)}}
      <header>
      <!--Header On-->
          <imageHeader>
              <image insets="25, 0, 0, 0" required="true">{{URL(:/templates/stoffez/images/moviestext{{VAL(^aTVScreenResolution)}}.jpg)}}</image>
          </imageHeader>{{CUT($imageheader::Off=CUT|On=)}}{{CUT(^aTVFirmwareVersion:CUT:=CUT|6.0=)}}
      <!--Header Off-->   
        <simpleHeader>
          <title>{{VAL(title1)}}</title>
          <subtitle>{{VAL(title2)}}</subtitle>
        </simpleHeader>{{CUT($imageheader::On=CUT|Off=)}}
      </header>

      <menu>
        <sections>
          <menuSection>
            <items>
              <twoLineMenuItem id="{{VAL(key)}}"
                             onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=Play')"
                             onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=MoviePrePlay')"
                             onHoldSelect="scrobbleMenu('{{URL(key)}}&amp;PlexConnect=ScrobbleMenuVideo')">
           {{COPY(Video)}}
                <label>{{VAL(title)}}</label>
                <label2>{{getDurationString(duration)}}</label2>
                <accessories>
                  <unplayedDot/>{{CUT(viewOffset)}}
                  <partiallyPlayedDot/>
                </accessories>{{CUT(viewCount)}}
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </twoLineMenuItem>
            </items>
          </menuSection>
        </sections>
      </menu>
    </listWithPreview>
    
    <!--No Items Available-->
    <dialog id="com.sample.error-dialog">
    {{CUT(size::0=|1=CUT)}}
      <title>PlexConnect</title>
      <description>{{TEXT(Plex Media Server: No Items Available)}}</description>
    </dialog>
    
  </body>
</atv>
