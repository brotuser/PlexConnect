<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
  </head>

  <body>
    <scroller id="single_artwork_select">
      <header>
        <imageHeader>
        	    <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=480|1080=720)}}, 0" required="true">{{URL(:/fanart/cache/{{LFBG("galaxy","{{EVAL(quote_plus("{{VAL(Video/title)}}"))}}","{{EVAL(quote_plus("{{TEXT(Select Artwork)}}"))}}","grey.jpg","{{VAL(^aTVScreenResolution)}}","OpenSans/OpenSans-Light.ttf","60","30","FFFFFF","FFFFFF","center","top","","110","","ChannelGrid")}})}}</image>{{CUT(Video/title:CUT:=CUT| =)}}
        	    <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=480|1080=720)}}, 0" required="true">{{URL(:/fanart/cache/{{LFBG("galaxy","{{EVAL(quote_plus("{{VAL(Video/title2)}}"))}}","{{EVAL(quote_plus("{{TEXT(Select Artwork)}}"))}}","grey.jpg","{{VAL(^aTVScreenResolution)}}","OpenSans/OpenSans-Light.ttf","60","30","FFFFFF","FFFFFF","center","top","","110","","ChannelGrid")}})}}</image>{{CUT(Video/title:: =CUT)}}

        </imageHeader>
      </header>
     
      <items>
        <collectionDivider alignment="left">
          <title></title>
        </collectionDivider>
        
        {{ADDXML(posters::/library/metadata/{{VAL(Video/ratingKey)}}/posters)}}
        {{VAR(key:Video/ratingKey)}}
        <shelf id="coverflow" columnCount="{{EVAL(min({{VAL(@posters/size:0)}},5))}}">
          <sections>
            <shelfSection>
              <items>
                <goldenPoster related="true" id="{{VAL(Video/ratingKey)}}" alwaysShowTitles="true"
                              onSelect="changeArtwork('{{VAL(%baseURL)}}', '{{VAL(%accesstoken)}}', '{{VAL(#key)}}', '{{VAL(key)}}', '');atv.unloadPage();">
                  {{COPY(@posters/Photo)}}
                  <title>{{VAL(selected::0=|1=Selected)}}</title>
                  <image>{{IMAGEURL(thumb)}}</image>
                  <defaultImage>resource://Poster.png</defaultImage>
                </goldenPoster>
              
              
              </items>
            </shelfSection>
          </sections>
        </shelf>
        
        <collectionDivider alignment="left">
          <title></title>
        </collectionDivider>
      </items>
    </scroller>
  </body>
</atv>
