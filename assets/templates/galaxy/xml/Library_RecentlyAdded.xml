<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
    <script src="{{URL(:/js/scrobble.js)}}" />
    <script src="{{URL(:/js/settings.js)}}" />
  </head>

  <body>
      {{VAR(sections:NoKey:FALSE)}}  <!--this sets the var to FALSE-->
      {{ADDXML(RecentlyAdded::/library/recentlyAdded)}}
      {{VAR(items:NoKey:FALSE)}}

      <itemCollectionWithImageHeader id="com.sample.menu-items-with-sections">
      <header>
	    <imageHeader>
	      <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=690|1080=1020)}}, 0" required="true">{{URL(:/fanartcache/{{LFBG("galaxy","{{EVAL(quote_plus("{{TEXT(Plex Library)}}"))}}","","grey.jpg","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","60","30","FFFFFF","FFFFFF","right","top","80","40","","List")}})}}</image>
	    </imageHeader>
      </header>
          
      <menu>
        <sections>
          <menuSection>
              {{COPY(Server:@RecentlyAdded/size::0=|1=COPY)}}
            
            <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Recently Added)}}</title>
              </horizontalDivider>
            </header>{{CUT(@RecentlyAdded/Server/size:CUT:0=CUT|1=)}}
            
            <items>
              <twoLineMenuItem id="{{VAL(key)}}"
                                       onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=Play')"
                                       onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect={{VAL(type::movie=Movie|episode=Episode)}}PrePlay')"
                                       onHoldSelect="scrobbleMenu('{{URL(key)}}&amp;PlexConnect=ScrobbleMenuVideo')">
                {{COPY(@RecentlyAdded/Server/Directory)}}
                {{VAR(items:NoKey:TRUE)}}              
                <label>{{VAL(title)}}</label>
                <label2>{{VAL(parentTitle)}}</label2>
                <accessories>
                  <unplayedDot/>{{CUT(viewOffset)}}
                  <partiallyPlayedDot/>
                </accessories>{{CUT(viewCount)}}
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::768)}}</image>
                  </crossFadePreview>
                </preview>
              </twoLineMenuItem> 
            </items>
          </menuSection>
        
        </sections>
      </menu>
    </itemCollectionWithImageHeader>
    
  </body>
</atv>
