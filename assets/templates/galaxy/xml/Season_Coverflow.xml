<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
  </head>
  
  <body>
    <scroller id="com.sample.menu-items-with-sections" volatile="true" onVolatileReload="atv.loadAndSwapURL('{{URL()}}')">
      <header>
    <!--Fullscreen-->
        <imageHeader>
	      <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=480|1080=720)}}, 0" required="true">{{URL(:/fanartcache/{{LFBG("galaxy","{{EVAL(quote_plus("{{VAL(title1)}}"))}}","{{EVAL(quote_plus("{{VAL(title2)}}"))}}","{{IMAGEURL(art:::)}}","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","60","30","FFFFFF","FFFFFF","center","top","","120","")}})}}</image>
        </imageHeader>{{CUT($tvshow_cover::Fullscreen=|Banner=CUT)}}
    <!--Banner-->
        <imageHeader>
          <image insets="4, 0, 0, 0" required="true">{{IMAGEURL(banner)}}</image>
        </imageHeader>{{CUT($tvshow_cover::Banner=|Fullscreen=CUT)}}
      </header>
      <items>
        <shelf id="coverflow" columnCount="{{EVAL(min({{VAL(size:0)}},5))}}">
          <sections>
            <shelfSection>
              <items>
                <goldenPoster id="{{VAL(key)}}" alwaysShowTitles="{{VAL($showtitles_tvshows::Highlighted Only=false|Show All=true)}}"
                              onPlay="atv.loadURL('{{URL(key)}}')"
                              onSelect="atv.loadURL('{{URL(key)}}')"
                              onHoldSelect="scrobbleMenu('{{URL(key)}}&amp;PlexConnect=ScrobbleMenu')">
                  {{COPY(Directory)}}
                  <title>{{VAL(title)}}</title>
                  <image>{{IMAGEURL(thumb::384)}}</image>
                  <defaultImage>resource://Poster.png</defaultImage>
                </goldenPoster>{{CUT(Directory/title:CUT:=)}}
            
            <!--    <oneLineMenuItem id="none">
                  <label>No Seasons</label>
                </oneLineMenuItem>{{CUT(Directory/title::=CUT)}}-->
              </items>
            </shelfSection>
          </sections>
        </shelf>
       
      </items>
    </scroller>
  </body>
</atv>
