<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
  </head>
  
  <body>
    <scroller id="com.sample.homevideo-grid">
      <header>
 	  <imageHeader>
          <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=550|1080=825)}}, 0" required="true">{{URL(:/fanartcache/{{LFBG("plex","{{EVAL(quote_plus("{{VAL(title1)}}"))}}","{{EVAL(quote_plus("{{VAL(title2)}}"))}}","backgrounds/plexdefault.png","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","40","25","CCCCCC","ff8800","right","top","60","25","162","","PlexGridSub")}})}}</image>
	    </imageHeader>
      </header>
      <items>
        <grid columnCount="7" id="grid_0">
          <items>
            <fourByThreePoster id="{{VAL(key)}}" featured="true" alwaysShowTitles="{{VAL($showtitles_homevideos::Highlighted Only=false|Show All=true)}}" 
                             onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=HomeVideoByFolder')"
                             onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=HomeVideoByFolder')">
              {{COPY(Directory)}}
              <title>{{VAL(title)}}</title>
              <subtitle>{{VAL(year:&#x00AD;)}}</subtitle>
              <image>{{URL(:/templates/plex/images/Folder.png)}}</image>
              <defaultImage>resource://Poster.png</defaultImage>
            </fourByThreePoster>
            
            <fourByThreePoster id="{{VAL(key)}}" featured="true" alwaysShowTitles="{{VAL($showtitles_homevideos::Highlighted Only=false|Show All=true)}}"
                             onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=Play')"
                             onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=HomeVideoPrePlay')">
              {{COPY(Video)}}
              <title>{{VAL(title)}}</title>
              <subtitle>{{VAL(year:&#x00AD;)}}</subtitle>
              <image>{{IMAGEURL(thumb::384)}}</image>
              <defaultImage>resource://Poster.png</defaultImage>
            </fourByThreePoster>
          </items>
        </grid>
      </items>
    </scroller>
  </body>{{CUT($homevideoview::Detailed=CUT|Grid=|List=CUT)}}
  
  
<body>
    <itemCollectionWithImageHeader id="HomeVideoList">
      <header>
        <imageHeader>
	      <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=658|1080=987)}}, 0" required="true">{{URL(:/fanartcache/{{LFBG("plex","{{EVAL(quote_plus("{{VAL(title1)}}"))}}","{{EVAL(quote_plus("{{VAL(title2)}}"))}}","backgrounds/plexdefault.png","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","40","25","fafafa","d2761f","right","top","70","25","162","","PlexParadeListSub")}})}}</image>
	    </imageHeader>
      </header>

      <menu>
        <sections>
          <menuSection>
            <items>
              <twoLineEnhancedMenuItem id="{{VAL(key)}}"
                             onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=HomeVideoByFolder')"
                             onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=HomeVideoByFolder')">
                {{COPY(Directory)}}
                <label>{{VAL(title)}}</label>
                <image>{{URL(:/templates/plex/images/Folder.png)}}</image>
                <defaultImage>resource://Poster.png</defaultImage>
                <preview>
                  <crossFadePreview>
                    <image>{{URL(:/templates/plex/images/Folder.png)}}</image>
                  </crossFadePreview>
                </preview>
              </twoLineEnhancedMenuItem>
              
              <twoLineMenuItem id="{{VAL(key)}}"
                             onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=Play')"
                             onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=HomeVideoPrePlay')"
                             onHoldSelect="scrobbleMenu('{{URL(key)}}&amp;PlexConnect=ScrobbleMenuVideo')">
                {{COPY(Video)}}
                <label>{{VAL(title)}}</label>
                <label2>{{getDurationString(duration)}}</label2>
                <accessories>
                  <unplayedDot/>{{CUT(viewOffset)}}
                  <partiallyPlayedDot/>
                </accessories>{{CUT(viewCount)}}
                <preview>
                  <crossFadePreview>
                    <image>{{IMAGEURL(thumb::384)}}</image>
                  </crossFadePreview>
                </preview>
              </twoLineMenuItem>
            </items>
          </menuSection>
        </sections>
      </menu>
    </itemCollectionWithImageHeader>
  </body>{{CUT($homevideoview::Detailed=CUT|Grid=CUT|List=)}}
  
  <body>
    <itemCollectionWithImageHeader id="HomeVideo_DetailedList">
      <header>
        <imageHeader>
	      <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=658|1080=987)}}, 0" required="true">{{URL(:/fanartcache/{{LFBG("plex","{{EVAL(quote_plus("{{VAL(title1)}}"))}}","{{EVAL(quote_plus("{{VAL(title2)}}"))}}","backgrounds/plexdefault.png","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","40","25","CCCCCC","FF8800","right","top","60","25","162","","PlexParadeListSub")}})}}</image>
	    </imageHeader>
      </header>

      <menu>
        <sections>
          <menuSection>
            <items>
              <twoLineEnhancedMenuItem id="{{VAL(key)}}"
                             onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=HomeVideoByFolder')"
                             onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=HomeVideoByFolder')">
                {{COPY(Directory)}}
                <label>{{VAL(title)}}</label>
                <image>{{URL(:/templates/plex/images/Folder.png)}}</image>
                <defaultImage>resource://Poster.png</defaultImage>
                <preview>
                  <crossFadePreview>
                    <image>{{URL(:/templates/plex/images/Folder.png)}}</image>
                  </crossFadePreview>
                </preview>
              </twoLineEnhancedMenuItem>
            
              <oneLineMenuItem id="{{VAL(key)}}"
                             onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=Play')"
                             onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=HomeVideoPrePlay')"
                             onHoldSelect="scrobbleMenu('{{URL(key)}}&amp;PlexConnect=ScrobbleMenuVideo')">
                {{COPY(Video)}}
                <label>{{VAL(title)}}</label>
                <accessories>
                  <unplayedDot/>{{CUT(viewOffset)}}
                  <partiallyPlayedDot/>
                </accessories>{{CUT(viewCount)}}
                <preview>
                  <keyedPreview>
                    <title>{{VAL(title)}}</title>
                    <summary>{{VAL(summary)}}</summary>
                    <image>{{IMAGEURL(thumb::384)}}</image>
										<metadataKeys>
											<label>{{TEXT(Actors)}}</label>
											<label>{{TEXT(Director)}}</label>
											<label>{{TEXT(Genre)}}</label>
											<label>{{TEXT(Length)}}</label>
										</metadataKeys>
										<metadataValues>
											<label>{{VAL(Role/tag)}}{{VAL(Role[2]/tag::=, )}}{{VAL(Role[2]/tag)}}{{VAL(Role[3]/tag::=, )}}{{VAL(Role[3]/tag)}}</label>
											<label>{{VAL(Director/tag)}}</label>
											<label>{{VAL(Genre/tag)}}{{VAL(Role[2]/tag::=, )}}{{VAL(Genre[2]/tag)}}</label>
											<label>{{getDurationString(duration)}}</label>
										</metadataValues>
                  </keyedPreview>
                </preview>
              </oneLineMenuItem>
            </items>
          </menuSection>
        </sections>
      </menu>
    </itemCollectionWithImageHeader>
  </body>{{CUT($homevideoview::Detailed=|Grid=CUT|List=CUT)}}
</atv>
