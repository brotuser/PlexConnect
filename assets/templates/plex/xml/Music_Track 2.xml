<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
    <script src="{{URL(:/js/selectAudioAndSubs.js)}}" />
  </head>

  <body>
    <itemDetailWithImageHeader id="com.apple.trailer" volatile="true" onVolatileReload="atv.loadAndSwapURL('{{URL()}}&amp;PlexConnect=HomeVideoPrePlay')">
      <header>
	    <imageHeader>
	      <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=680|1080=1020)}}, 0" required="true">{{URL(:/fanartcache/{{LFBG("plex","{{EVAL(quote_plus("{{VAL(Video/title)}}"))}}","{{EVAL(quote_plus("({{VAL(Video/year)}}) {{VAL(Video/studio)}}"))}}","{{IMAGEURL(Video/art:::)}}","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","30","20","FFFFFF","FFFFFF","left","top","350","40","2","EpisodePrePlay")}})}}</image>
	    </imageHeader>
	  </header>
      <!--<title>{{VAL(Video/title)}} ({{VAL(Video/year)}})</title>
      <subtitle>{{VAL(Video/studio)}}</subtitle>-->
      <rating>{{contentRating(Video/contentRating)}}</rating>
      <summary>{{VAL(Video/summary)}}</summary>
      <image style="sixteenByNinePoster">{{IMAGEURL(Video/thumb::768)}}</image>
      <defaultImage>resource://Poster.png</defaultImage>

      <table>
        <columnDefinitions>
          <columnDefinition width="25" alignment="left">
            <title>{{TEXT(Details)}}</title>
          </columnDefinition>
        </columnDefinitions>
        <rows>
          <row>
            <label>{{VAL(Video/Genre/tag)}}</label>
          </row>
          <row>
            <label>{{getDurationString(Video/duration)}}</label>
          </row>
          <row>
            <label>{{VAL(Video/Media/videoResolution:Unknown:1080=1080p|720=720p|576=SD|480=SD|sd=SD)}}   {{VAL(Video/Media/audioCodec:Unknown:ac3=AC3|aac=AAC|mp3=MP3|dca=DTS|drms=DRMS)}} {{VAL(Video/Media/audioChannels:Unknown:2=Stereo|6=5.1|8=7.1)}} </label>
          </row>
          <row>
            <label>{{EVAL("{{VAL(Video/Media/container)}} / {{VAL(Video/Media/videoCodec)}}".upper())}}</label>
          </row>
        </rows>
      </table>

      <centerShelf>
        <shelf id="centerShelf" columnCount="4" center="true">
          <sections>
            <shelfSection>
              {{VAR(AudioStreams:NoKey:0)}}
              {{VAR(SubtitleStreams:NoKey:0)}}
              <stash>{{CUT(^aTVFirmwareVersion:CUT:=CUT|5.2=)}}
                <!-- audio streams info-->
                <stream>
                  {{COPY(Video/Media/Part/Stream:streamType::=|2=COPY|2 =)}}
                  {{VAR(AudioStreams:NoKey:{{EVAL({{VAL(#AudioStreams)}}+1)}})}}
                  <id>{{VAL(id)}}</id>
                  <language>{{VAL(language:Unknown)}}</language>
                  <codec>{{VAL(codec)}}</codec>
                  <streamType>{{VAL(streamType)}}</streamType>
                  <selected>{{VAL(selected:0)}}</selected>
                </stream>
                <!-- subtitle streams info-->
                <stream>
                  {{COPY(Video/Media/Part/Stream:streamType::=|3=COPY|3 =)}}
                  {{VAR(SubtitleStreams:NoKey:{{EVAL({{VAL(#SubtitleStreams)}}+1)}})}}
                  <id>{{VAL(id)}}</id>
                  <language>{{VAL(language:Unknown)}}</language>
                  <format>{{VAL(format)}}</format>
                  <streamType>{{VAL(streamType)}}</streamType>
                  <selected>{{VAL(selected:0)}}</selected>
                </stream>
              </stash>
              
              <items>
                <actionButton id="play" onSelect="atv.loadURL('{{URL(key)}}&amp;PlexConnect=Play')"
                                        onPlay="atv.loadURL('{{URL(key)}}&amp;PlexConnect=Play')">
                  <title>{{TEXT(Play)}}</title>
                  <image>resource://Play.png</image>
                  <focusedImage>resource://PlayFocused.png</focusedImage>
                  <!--<badge></badge>-->
                </actionButton>
                <actionButton id="selectAudioAndSubs"
                              onSelect="selectAudioAndSubs('{{VAL(%baseURL)}}', '{{VAL(%accesstoken)}}', '{{VAL(Video/Media/Part/id)}}')"
                              onPlay="selectAudioAndSubs('{{VAL(%baseURL)}}', '{{VAL(%accesstoken)}}', '{{VAL(Video/Media/Part/id)}}')">
                {{VAR(SelectAudioAndSubs:NoKey:{{EVAL( {{VAL(#AudioStreams)}}>1 or {{VAL(#SubtitleStreams)}}>0 )}})}}
                {{CUT(#SelectAudioAndSubs:CUT:False=CUT|True=)}}
                  <title>{{TEXT(Audio/Subs)}}</title>
                  <image>resource://Queue.png</image>
                  <focusedImage>resource://QueueFocused.png</focusedImage>
                </actionButton>
              </items>
            </shelfSection>
          </sections>
        </shelf>
      </centerShelf>

		</itemDetailWithImageHeader>
	</body>
</atv>






<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE plist PUBLIC "-//Apple Computer//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd" >
<plist version="1.0">
  <dict>
    <key>page-type</key>
    <dict>
      <key>template-name</key>
      <string>item</string>
      <key>template-parameters</key>
      <dict/>
    </dict>
    <key>items</key>
    <array>
      <dict>
        <key>type</key>
        <string>podcast</string>
        <key>title</key>
        <!-- library -->
        <string>{{VAL(parentTitle)}}</string>{{CUT(content::=CUT)}}
        <!-- channel: iTunes (old style plugin) -->
        <string>{{VAL(title2)}}</string>{{CUT(@main/content:CUT:songs=|songs =CUT)}}
        <key>items</key>
        {{VAR(img:thumb)}}
        <array>
          <dict>
          {{COPY(Track)}}
            <key>type</key>
            <string>podcast-episode</string>
            <key>title</key>
            <!-- library -->
            <string>{{VAL(title)}}</string>{{CUT(@main/content::=CUT)}}
            <!-- channel: iTunes (old style plugin) -->
            <string>{{VAL(track)}}</string>{{CUT(@main/content:CUT:songs=|songs =CUT)}}
            <key>item-id</key>
            <integer>{{VAL(index:1)}}</integer>
            <key>artwork-urls</key>{{CUT(#img:CUT:=CUT| =)}}
            <array>
              <dict>
                <key>url</key>
                <string>{{VAL(%baseURL)}}{{VAL(#img)}}</string>
              </dict>
            </array>{{CUT(#img:CUT:=CUT| =)}}
            <key>store-offers</key>
            <dict>
              <key>standard-audio</key>
              <dict>
                <key>asset-url</key>
                <!-- library -->
                <string>{{MUSICURL(Media/Part/key)}}</string>{{CUT(@main/content::=CUT)}}
                <!-- channel: iTunes (old style plugin) -->
                <string>{{MUSICURL(key)}}</string>{{CUT(@main/content:CUT:songs=|songs =CUT)}}
              </dict>
            </dict>
            <key>description</key>
            <string></string>
          </dict>
        
        </array>
      </dict>
    </array>
  </dict>
</plist>
