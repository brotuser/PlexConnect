<?xml version="1.0" encoding="UTF-8"?>
<atv>
  <head>
    <script src="{{URL(:/js/utils.js)}}" />
    <script src="{{URL(:/js/settings.js)}}" />
  </head>

  <body>
    <itemCollectionWithImageHeader id="SettingsPage_Library">
      <header>
        <imageHeader>
          <image insets="0, 0, {{VAL(^aTVScreenResolution:1:720=692|1080=1038)}}}, 0" required="true">
           {{URL(:/fanartcache/{{LFBG("plex","{{EVAL(quote_plus("{{TEXT(Settings)}}"))}}","","backgrounds/plexdefault.png","{{VAL(^aTVScreenResolution)}}","fonts/OpenSans/OpenSans-Light.ttf","40","","CCCCCC","","right","top","60","25","","","PlexSettings")}})}}
          </image>
        </imageHeader>
      </header>
      <preview>
        <keyedPreview>
          <title>&#x00AD;<!--soft-hyphen--></title>
          <summary/>
          <metadataKeys>
            <label>{{TEXT(Version)}}</label>
            <label>{{TEXT(Authors)}}</label>
            <label>{{TEXT(Wiki/Docs)}}</label>
            <label>{{TEXT(Homepage)}}</label>
            <label>{{TEXT(Forum)}}</label>
          </metadataKeys>
          <metadataValues>
            <label>{{EVAL(__VERSION__)}}</label>
            <label>Baa, roidy</label>
            <label>f00b4r, meltman</label>
            <label>https://github.com/ibaa/plexconnect</label>
            <label>http://forums.plexapp.com/...plexconnect</label>
          </metadataValues>
          <image>{{URL(:/templates/plex/images/PlexConnectLogo.png)}}</image>
        </keyedPreview>
      </preview>

      <menu>
        <sections>
		<menuSection>
           <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Library)}}</title>
              </horizontalDivider>
            </header>
            <items>
              <oneLineMenuItem id="plex_LibraryView" onSelect="toggleSettings('plex_LibraryView', 'Settings_Library')">
                <label>{{TEXT(Library View)}}</label>
                <rightLabel>{{SETTING(plex_libraryview)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="plex_SectionIcons" onSelect="plex_toggleSettings('plex_SectionIcons', 'Settings_Library')">
                <label>{{TEXT(Library Icons)}}</label>
                <rightLabel>{{SETTING(plex_sectionicons)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="plex_SectionsPosition" onSelect="toggleSettings('plex_SectionsPosition', 'Settings_Library')">
                <label>{{TEXT(Library Sections)}}</label>
                <rightLabel>{{SETTING(plex_sectionsposition)}}</rightLabel>
              </oneLineMenuItem>
              </items>
              </menuSection>
              <menuSection>
             <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Shared Library)}}</title>
              </horizontalDivider>
            </header>
            <items>
                <oneLineMenuItem id="plex_LibraryView_Remote" onSelect="toggleSettings('plex_LibraryView_Remote', 'Settings_Library')">
                <label>{{TEXT(Library View)}}</label>
                <rightLabel>{{SETTING(plex_libraryview_remote)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="plex_SectionIcons_Shared" onSelect="toggleSettings('plex_SectionIcons_Shared', 'Settings_Library')">
                <label>{{TEXT(Library Icons)}}</label>
                <rightLabel>{{SETTING(plex_sectionicons_shared)}}</rightLabel>
              </oneLineMenuItem> 
               </items>
              </menuSection>
        <!--Removed Below iOS 6.0-->
             
              <menuSection>
           <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Appearance)}}</title>
              </horizontalDivider>
            </header>
            <items>
              <oneLineMenuItem id="plex_Library_Search" onSelect="toggleSettings('plex_Library_Search', 'Settings_Library')">
                <label>{{TEXT(Search Section)}}</label>
                <rightLabel>{{SETTING(plex_Library_search)}}</rightLabel>
              </oneLineMenuItem>
              <oneLineMenuItem id="plex_ShowTitles_Library" onSelect="toggleSettings('plex_ShowTitles_Library', 'Settings_Library')">
                <label>{{TEXT(Poster Titles)}}</label>
                <rightLabel>{{SETTING(plex_showtitles_library)}}</rightLabel>
              </oneLineMenuItem> 
              <oneLineMenuItem id="ChannelView" onSelect="toggleSettings('ChannelView', 'Settings_Library')">
                <label>{{TEXT(Channel View)}}</label>
                <rightLabel>{{SETTING(channelview)}}</rightLabel>
              </oneLineMenuItem>            
            </items>
          </menuSection>

          <menuSection>
            <header>
              <horizontalDivider alignment="left">
                <title>{{TEXT(Library Extras)}}</title>
              </horizontalDivider>
            </header>
            <items>

              <oneLineMenuItem id="plex_Library_OnDeck" onSelect="toggleSettings('plex_Library_OnDeck', 'Settings_Library')">
                <label>{{TEXT(On Deck)}}</label>
                <accessories>
                  <checkMark/>
                </accessories>{{CUT($plex_library_ondeck::unchecked=CUT|checked=)}}
              </oneLineMenuItem>

              <oneLineMenuItem id="plex_Library_RecentlyAdded" onSelect="toggleSettings('plex_Library_RecentlyAdded', 'Settings_Library')">
                <label>{{TEXT(Recently Added)}}</label>
                <accessories>
                  <checkMark/>
                </accessories>{{CUT($plex_library_recentlyadded::unchecked=CUT|checked=)}}
              </oneLineMenuItem>               
              <oneLineMenuItem id="plex_Library_Channels" onSelect="toggleSettings('plex_Library_Channels', 'Settings_Library')">
                <label>{{TEXT(Channels)}}</label>
                <accessories>
                  <checkMark/>
                </accessories>{{CUT($plex_library_channels::unchecked=CUT|checked=)}}
              </oneLineMenuItem>              
            </items>
          </menuSection>
        </sections>
      </menu>
    </itemCollectionWithImageHeader>
  </body>
</atv>
